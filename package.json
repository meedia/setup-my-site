{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": ">=1",
    "lerna": "^3.18.3",
    "lint-staged": ">=8",
    "prettier": "1.18.2",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna run --concurrency 1 --stream precommit"
    }
  },
  "lint-staged": {
    "*.{yml,yaml,json,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
